<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/widget_device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IoT Monitor"
            android:textColor="@color/widget_text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/widget_status_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/widget_status_dot"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Sensor Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Row 1: Temperature & Humidity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- Temperature -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEMP"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/widget_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/widget_temperature"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Humidity -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HUMID"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/widget_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/widget_humidity"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Row 2: Light & Sound -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Light -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIGHT"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/widget_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/widget_light"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lux"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Sound -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOISE"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/widget_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/widget_sound"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dB"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Last Updated -->
    <TextView
        android:id="@+id/widget_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap to refresh"
        android:textColor="@color/widget_text_secondary"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_marginTop="4dp" />

</LinearLayout>
